<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="octacode.allblue.code.moviezz.ReviewFragment">

    <android.support.v7.widget.CardView
        android:elevation="8dp"
        android:layout_margin="8dp"
        app:contentPadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_1_container"/>

    <android.support.v7.widget.CardView
        android:elevation="8dp"
        android:layout_margin="8dp"
        app:contentPadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_1_container"
        android:id="@+id/review_2_container"/>

    <android.support.v7.widget.CardView
        android:elevation="8dp"
        android:layout_margin="8dp"
        app:contentPadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_2_container"
        android:id="@+id/review_3_container"/>
</RelativeLayout>
