<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:minHeight="?attr/listPreferredItemHeight"
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:minHeight="?attr/listPreferredItemHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="160dp"
            android:layout_gravity="center_vertical"
            android:layout_height="?attr/listPreferredItemHeight"
            android:scaleType="fitXY"
            android:id="@+id/favourites_list_thumbnail"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:text="8.0"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/favourites_list_ratings"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/favourites_list_thumbnail" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/favourites_list_title"
            android:layout_below="@+id/favourites_list_ratings"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/favourites_list_thumbnail" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF1CA8F4"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:id="@+id/favourites_list_genre"
            android:layout_below="@+id/favourites_list_title"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/favourites_list_thumbnail" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
